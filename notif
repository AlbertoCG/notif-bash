#!/bin/bash
ARG=$1
FILE=/home/$USER/messages.log
BATTERY=/sys/class/power_supply/BAT0/
BOX="$HOME/mail/acg/INBOX"

batterystatus() {
    if [ "$(cat $BATTERY/status)" == "Discharging" ]; then
        echo '<b>ðŸ”‹discharging:</b>' "$(cat $BATTERY/capacity)%"
    elif [ "$(cat $BATTERY/status)" == "Charging" ]; then
        echo '<b>ðŸ”‹charging:</b>' "$(cat $BATTERY/capacity)%"
    else
        echo '<b>ðŸ”‹full</b>'
    fi
}

nowplaying() {
    if [ "$(playerctl status)" == "Playing" ]; then
        echo '<b>â–¶</b>' "$(playerctl metadata artist) - $(playerctl metadata title)"
    elif [ "$(playerctl status)" == "Paused" ]; then
        echo '<b>â…¡</b>' "$(playerctl metadata artist) - $(playerctl metadata title)"
    else 
        echo ""
    fi 
}

newmails(){
    COUNT="$(ls -l $BOX/new | wc -l)"
    NEW="$(expr $COUNT - 1)"

    if (($NEW == 0)); then
        echo "ðŸ’¬ $NEW |"
    else
        echo "ðŸ’¬ $NEW |"
    fi
}

case "$ARG" in
    clear) cat /dev/null > $FILE
        ;;
    count) echo $(wc -l $FILE | awk '{print $1}')
        ;;
    irc) USER=$2
        shift 2
        MESSAGE=$@
        echo $(date '+%Y/%m/%d %H:%M') IRC - $USER : "$MESSAGE" >> $FILE
        notify-send "ðŸ’¬ irc - $USER: " "$(echo $MESSAGE | cut -c1-50)"
        ;;
    playing)
        notify-send "â™ª currently playing: " "$(playerctl metadata artist) - $(playerctl metadata title)"
        ;;
    info)
        notify-send 'ðŸ–¥system information ' "\n$(newmails) <b>ðŸ”‰</b> $(amixer get Master | sed -n 's/^.*\[\([0-9]\+%\).*$/\1/p' | uniq) | $(batterystatus) | <b>ðŸ“†</b> $(date '+%Y/%m/%d %H:%M')\n $(nowplaying)"
        ;;
    view) COUNT=$(wc -l $FILE | awk '{print $1}')
        tail -n $COUNT $FILE | less
        ;;
esac
